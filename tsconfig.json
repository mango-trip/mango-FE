{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "allowUnusedLabels": false,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@components/*": [
        "./src/core/components/*"
      ],
      "@hooks/*": [
        "./src/core/hooks/*"
      ],
      "@templates/*": [
        "./src/core/templates/*"
      ],
      "@mango-library/*": [
        "./src/core/mango-library/*"
      ],
      "@type/*": [
        "./src/core/type/*"
      ],
      "@public/*": [
        "./public/*"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "back/model/user/user.model"
  ],
  "exclude": [
    "node_modules"
  ]
}